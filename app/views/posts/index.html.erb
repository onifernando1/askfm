<%if user_signed_in?%>
<%= current_user.name%>
<%end%>
<% @posts.each do |post|%>
<%if user_signed_in?%>
    <%=post.user.name%>
<%else %>
<p>Sign in to view user name </p>
<%end%>
<ul>
    <li>
        <%=post.title%>
    </li>
    <li>
        <%=post.body%>
    </li>
<%= link_to "Delete", post_path(post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    <%end%>
</ul>
<%= link_to "New Post", new_post_path%>

